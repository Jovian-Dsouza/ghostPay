{
  "name": "ghostPay",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "build:web": "turbo run build --filter=web",
    "dev:web": "turbo run dev --filter=web",
    "build:kiosk": "turbo run build --filter=kiosk",
    "dev:kiosk": "turbo run dev --filter=kiosk",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
